---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { contact, services, areas } from "../data";

const meta = Astro.props.meta || {
  title: "Default Title",
  description: "Default description",
};

const schema = {
  "@context": "https://schema.org",
  "@type": "HomeAndConstructionBusiness",
  name: "Harry Pearce Carpentry and Handyman Services",
  image: "https://harrypearcecarpentry.co.uk/images/og.jpg",
  url: "https://harrypearcecarpentry.co.uk",
  telephone: contact.phone,
  email: contact.email,
  address: {
    "@type": "PostalAddress",
    addressLocality: contact.locality,
    addressRegion: contact.region,
    addressCountry: contact.country,
  },
  areaServed: areas.map((area) => ({
    "@type": "Place",
    name: area,
  })),
  makesOffer: services.map((service) => ({
    "@type": "Offer",
    itemOffered: {
      "@type": "Service",
      name: service.title,
    },
  })),
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{meta.title} | Harry Pearce Carpentry</title>
    <meta name="description" content={meta.description} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#F1F3F2" />

    <meta
      property="og:title"
      content={`${meta.title} | Harry Pearce Carpentry`}
    />
    <meta property="og:description" content={meta.description} />
    <meta
      property="og:image"
      content="https://harrypearcecarpentry.co.uk/images/og.jpg"
    />
    <meta property="og:url" content="https://harrypearcecarpentry.co.uk" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content={`${meta.title} | Harry Pearce Carpentry`}
    />
    <meta name="twitter:description" content={meta.description} />
    <meta
      name="twitter:image"
      content="https://harrypearcecarpentry.co.uk/images/og.jpg"
    />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/images/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/images/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/images/favicon-16x16.png"
    />
    <link rel="manifest" href="/site.webmanifest" />

    <script
      type="application/ld+json"
      set:html={JSON.stringify(schema, null, 2)}
    />
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
