---
import { Image } from "astro:assets";
import H1 from "../components/H1.astro";
import { contact } from "../data";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  meta={{
    title: "Contact & Free Quotes Folkestone Kent | Harry Pearce Carpentry",
    description:
      "Get in touch for professional carpentry services in Folkestone and Capel-le-Ferne. Free quotes, friendly service. Call or email today for your project.",
    url: "https://harrypearcecarpentry.co.uk/contact",
  }}
>
  <section class="py-16 bg-muted/20">
    <div
      class="flex flex-col gap-4 items-center text-center justify-center wrapper"
    >
      <H1 title="Get in touch" />
      <p class="text-text text-lg">
        I'm always happy to discuss your project and get a free quote.
      </p>
    </div>
  </section>

  <section class="py-16">
    <div class="wrapper grid md:grid-cols-2 gap-8">
      <div class="flex flex-col gap-4 items-center justify-center">
        <p class="text-lg md:text-2xl">
          <a href={`mailto:${contact.email}`}>{contact.email}</a>
        </p>
        <p class="text-lg md:text-2xl">
          <a href={`tel:${contact.phone}`}>{contact.phoneFormatted}</a>
        </p>
      </div>
      <div>
        <Image
          src="/images/main-square.jpg"
          alt="Harry Pearce with his van"
          class="w-full object-cover max-w-[400px] mx-auto"
          loading="lazy"
          width={800}
          height={800}
        />
      </div>
    </div>
  </section>
</BaseLayout>
