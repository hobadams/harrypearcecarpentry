---
import { Image } from "astro:assets";
import H1 from "../components/H1.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { services } from "../data";
---

<BaseLayout
  meta={{
    title:
      "Carpentry Services Folkestone & Capel-le-Ferne | Harry Pearce Carpentry",
    description:
      "Expert carpentry & handyman services in Folkestone & Capel-le-Ferne. Kitchen installation, door fitting, flat-pack assembly, stud walls & more.",
    url: "https://harrypearcecarpentry.co.uk/services",
  }}
>
  <section class="py-16 bg-muted/20">
    <div
      class="flex flex-col gap-4 items-center text-center justify-center wrapper"
    >
      <H1 title="Services" />
      <p class="text-text text-lg">
        I offer a wide range of services to suit your needs. I'm always happy to
        discuss options that fit your budget and needs.
      </p>
    </div>
  </section>
  <section
    class="flex flex-col gap-8 items-center justify-center wrapper py-16"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        services.map((service) => (
          <div class="border border-border/50 rounded-md min-h-[200px] text-center flex flex-col justify-center">
            <Image
              src={service.image}
              alt={service.title}
              class="w-full h-full object-cover"
              loading="lazy"
              width={300}
              height={300}
            />
            <div class="p-4 flex flex-col gap-2">
              <h2 class="text-xl font-semibold">{service.title}</h2>
              <p class="text-text">{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</BaseLayout>
